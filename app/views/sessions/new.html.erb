<div class="mx-auto md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium
        rounded-lg inline-block" id="notice">
        <%= notice %>
    </p>
  <% end %>
  <% if alert.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium
        rounded-lg inline-block" id="notice">
        <%= alert %>
    </p>
  <% end %>
  <%= form_tag do %>
    <h2 class="font-bold text-3xl">Please Log In</h2>
    <div class="my-5">
      <%= label_tag :name, 'Name:' %>
      <%= text_field_tag :name, params[:name], class: "payment-field" %>
    </div>
    <div class="my-5">
      <%= label_tag :password, 'Password:' %>
      <%= password_field_tag :password, params[:password],
          class: "payment-field" %>
    </div>
    <div class="actions">
      <%= submit_tag "Login", class: "rounded-lg py-3 px-5
      bg-green-600 text-black inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium
        rounded-lg inline-block" id="notice">
      
    <div>You can use admin account to access orders, create new products...</div>
    <div>The home page is for buyers and we asume they don't need an account to buy </div>
    <div>Demo admin account: </div>
    <div>Username: demo</div>
    <div>Password: demo</div>
  </p>
</div>