<%= turbo_frame_tag(dom_id(product)) do %>
  <li class='flex mb-6'>

    <div>
      <%= link_to line_items_path(product_id: product), data: {turbo_method: :post} , class: "block w-40 h-48 mr-6" do %>
        <%= image_tag(product.image_url, class: "contain shadow") %>
      <% end %>
    </div>
        
    <div>
      <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>
      <p>
        <%= sanitize(product.description) %>
      </p>

      <% if change_product %>
        <div class="mt-3 change-highlight">          
      <% else %>
        <div class="mt-3">
      <% end %>
        <%= number_to_currency(product.price) %>
        
        <%= button_to 'Add to Cart', 
            line_items_path(product_id: product), 
            form_class: 'inline', 
            class: 'ml-4 rounded-lg py-1 px-2
                  text-white bg-green-600' %>
      </div>
    </div>
  </li>
<% end %>