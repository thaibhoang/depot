<% if line_item == @current_item %>
  <tr class="line-item-highlight">
<% else %>
  <tr>
<% end %>
  <td class="text-right"><%= line_item.quantity %></td>
  <td>&times;</td>
  <td class="pr-2">
    <%= line_item.product.title %>
  </td>
  <td class="text-right font-bold">
    <%= number_to_currency(line_item.total_price) %>
  </td>
  <td>
    <%= button_to "+", line_items_url(product_id: line_item.product.id), 
        class: 'ml-4 rounded-lg py-1 px-3 ml-5 text-white bg-green-600'%>
  </td>
  <td>
    <% if line_item.quantity > 1 %>
      <%= button_to "-", line_item_url(line_item, line_item: {quantity: line_item.quantity - 1}),
          method: :patch, 
          class: 'ml-4 rounded-lg py-1 px-3 ml-5 text-white bg-green-600'%>
    <% else %>
      <%= button_to "-", line_item_url(line_item),
        method: :delete, 
        class: 'ml-4 rounded-lg py-1 px-3 ml-5 text-white bg-green-600'%>
    <% end %>
  </td>
</tr>